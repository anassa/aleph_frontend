<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 main-content">
			
		</div>
		<div class="col-md-4 sidebar">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">
						Carrito de artículos
						<a class="link">
							<i class="fa fa-minus pull-right"></i>
						</a>
					</h3>
				</div>
				<table class="table" id="itemCart">
					<thead>
						<tr>
							<th>#</th>
							<th>Marca</th>
							<th>Modelo</th>
							<th>Cantidad</th>
							<th>Precio</th>
							<th>
								<i class="text-info fa fa-asterisk"></i>
							</th>
						</tr>
					</thead>
					<tbody>
						{{#shopCart}}
						<tr {{data 'item'}}>
							<td>{{itemPos}}</td>
							<td>{{brand}}</td>
							<td>{{model}}</td>
							<td>{{quantity}}</td>
							<td>{{getMarketPrice}}</td>
							<td>
								<a class="link">
									<i class="text-danger fa fa-times"></i>
								</a>
							</td>
						</tr>
						{{/shopCart}}
						{{^shopCart}}
						<tr class="danger">
							<td colspan="6">
								Aun no se agrego ningun articulo al carrito.
							</td>
						</tr>
						{{/shopCart}}
					</tbody>
					{{#amount}}
					<tfoot>
						<tr>
							<th colspan="4">Total de la venta</th>
							<th colspan="2">${{getAmount}}</th>
						</tr>
					</tfoot>
					{{/amount}}
				</table>
				<div class="panel-body">
					<div class="pull-right">
						<button type="button" class="btn btn-primary facturar {{^shopCart}} disabled {{/shopCart}}">Pedir</button>
					</div>
				</div>
			</div>
			{{#currentItem}}
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">
						Detalle del artículo seleccionado
						<a class="link">
							<i class="fa fa-minus pull-right"></i>
						</a>
					</h3>
				</div>
				<div class="panel-body">
					<dl class="dl-horizontal">
						<dt>Tipo</dt>
						<dd>{{currentItem.type}}</dd>
						<dt>Marca</dt>
						<dd>{{currentItem.brand}}</dd>
						<dt>Modelo</dt>
						<dd>{{currentItem.model}}</dd>
						<dt>Código</dt>
						<dd>{{currentItem.code}}</dd>
						<dt>Precio</dt>
						<dd>{{currentItem.getMarketPrice}}</dd>
					</dl>
					<div class="pull-right">
						<button type="button" class="btn btn-danger cancel-item">Cancelar</button>
						<button type="button" class="btn btn-default item-details">Detalles</button>
						<button type="button" class="btn btn-primary add-quantity">Agregar</button>
					</div>
				</div>
			</div>
			{{/currentItem}}
			{{^currentItem}}
			<div class="alert alert-danger" role="alert">
				Aun no se selecciono ningun artículo.
			</div>
			{{/currentItem}}
		</div>
	</div>
</div>
<div class="modal fade" id="itemQuantity">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Cerrar</span>
				</button>
				<h4 class="modal-title">Cantidad a agregar</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal" role="form">
					<div class="form-group">
						<label for="quantity" class="col-sm-6 control-label">
							Cantidad
						</label>
						<div class="col-sm-6">
							<input type="text" class="form-control" name="quantity" value="1">
						</div>						
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
				<button type="button" class="btn btn-primary add-item">Agregar</button>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="removeItem">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Cerrar</span>
				</button>
				<h4 class="modal-title">Remover Artículo</h4>
			</div>
			<div class="modal-body">
				<p>¿Está seguro que desea remover el artículo?</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
				<button type="button" class="btn btn-danger remove-item">Remover</button>
			</div>
		</div>
	</div>
</div>