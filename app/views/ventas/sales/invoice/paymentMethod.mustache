<h3>Forma de Pago</h3>
<form class="form-horizontal" role="form">
	<div class="form-group">
		<label for="method" class="col-sm-4 control-label">Método de Pago</label>
		<div class="col-sm-8">
			<select name="method" class="form-control">
				<option value="1">Efectivo</option>
				<option value="2">Tarjeta de Débito</option>
				<option value="3">Tarjeta de Crédito</option>
				<option value="4">A Cuenta</option>
			</select>
		</div>
	</div>
	<div class="form-group all-control">
		<label for="type" class="col-sm-4 control-label">Tipo</label>
		<div class="col-sm-8">
			<select name="type" class="form-control">
				<option value="1">VISA</option>
				<option value="2">MasterCard</option>
				<option value="3">AmericanExpress</option>
				<option value="4">Naranja</option>
				<option value="5">Nativa</option>
				<option value="6">Cabal</option>
				<option value="7">Otra</option>
			</select>
		</div>
	</div>
	<div class="form-group all-control">
		<label for="instalmentsNumber" class="col-sm-4 control-label">Número de Cuotas</label>
		<div class="col-sm-8">
			<input type="text" name="instalmentsNumber" class="form-control">
		</div>
	</div>
	<div class="form-group all-control">
		<label for="interest" class="col-sm-4 control-label">Intereses</label>
		<div class="col-sm-8">
			<input type="text" name="interest" class="form-control">
		</div>
	</div>
	<div class="form-group all-control bank-control">
		<label for="bank" class="col-sm-4 control-label">Banco</label>
		<div class="col-sm-8">
			<input type="text" name="bank" class="form-control">
		</div>
	</div>
	<div class="form-group all-control disccount-control">
		<label for="disccount" class="col-sm-4 control-label">Descuento</label>
		<div class="col-sm-8">
			<input type="text" name="disccount" class="form-control">
		</div>
	</div>
</form>