<div class="wizard" id="wizardFacturarVenta" data-title="Facturar Venta">
	<div class="wizard-card" data-cardname="card1">
		<h3>Cliente</h3>
		<div class="form-group">
			<label for="nombre" class="col-sm-3 control-label">Nombre</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" name="name" value="{{client.name}}">
			</div>
		</div>
		<div class="form-group">
			<label for="apellido" class="col-sm-3 control-label">Apellido</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" name="lastName" value="{{client.lastName}}">
			</div>
		</div>
		<div class="form-group">
			<label for="dni" class="col-sm-3 control-label">DNI</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" name="dni" value="{{client.dni}}">
			</div>
		</div>
		<div class="form-group">
			<label for="dni" class="col-sm-3 control-label">Teléfono</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" name="phone" value="{{client.phone}}">
			</div>
		</div>
		<div class="form-group">
			<label for="dni" class="col-sm-3 control-label">Dirección</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" name="address" value="{{client.address}}">
			</div>
		</div>
		<div class="form-group">
			<label for="dni" class="col-sm-3 control-label">E-Mail</label>
			<div class="col-sm-8">
				<input type="text" class="form-control" name="email" value="{{client.email}}">
			</div>
		</div>
	</div>

	<div class="wizard-card" data-cardname="card2">
		<h3>Forma de Pago</h3>
		<form class="form-horizontal" role="form" id="paymentMethod">
			<div class="form-group">
				<label for="method" class="col-sm-4 control-label">Metodo de Pago</label>
				<div class="col-sm-8">
					<select name="method" class="form-control">
						<option value="1">Efectivo</option>
						<option value="2">Tarjeta de Debito</option>
						<option value="3">Tarjeta de Credito</option>
						<option value="4">A Cuenta</option>
					</select>
				</div>
			</div>
			<div class="form-group all-control">
				<label for="type" class="col-sm-4 control-label">Tipo</label>
				<div class="col-sm-8">
					<select name="type" class="form-control">
						<option value="1">VISA</option>
						<option value="2">MasterCard</option>
						<option value="3">AmericanExpress</option>
						<option value="4">Naranja</option>
						<option value="5">Nativa</option>
						<option value="6">Cabal</option>
						<option value="7">Otra</option>
					</select>
				</div>
			</div>
			<div class="form-group all-control">
				<label for="instalmentsNumber" class="col-sm-4 control-label">Numero de Cuotas</label>
				<div class="col-sm-8">
					<input type="text" name="instalmentsNumber" class="form-control">
				</div>
			</div>
			<div class="form-group all-control">
				<label for="interest" class="col-sm-4 control-label">Intereses</label>
				<div class="col-sm-8">
					<input type="text" name="interest" class="form-control">
				</div>
			</div>
			<div class="form-group all-control bank-control">
				<label for="bank" class="col-sm-4 control-label">Banco</label>
				<div class="col-sm-8">
					<input type="text" name="bank" class="form-control">
				</div>
			</div>
			<div class="form-group all-control disccount-control">
				<label for="disccount" class="col-sm-4 control-label">Descuento</label>
				<div class="col-sm-8">
					<input type="text" name="disccount" class="form-control">
				</div>
			</div>
		</form>
	</div>

	<div class="wizard-card" data-cardname="card3">
		<h3>Verificar</h3>
		<div class="row">
			<div class="col-md-6">
				<dl class="dl-horizontal">
					<dt>Cliente</dt>
					<dt>Nombre</dt>
					<dd>{{client.name}}</dd>
					<dt>Apellido</dt>
					<dd>{{client.lastName}}</dd>
					<dt>DNI</dt>
					<dd>{{client.dni}}</dd>
				</dl>
			</div>
			<div class="col-md-6">
				<dl class="dl-horizontal">
					<dt>Forma de Pago</dt>
					<dt>Tipo de Pago</dt>
					<dd>{{paymentMethod}}</dd>
					{{#bank}}
					<dt>Banco</dt>
					<dd>{{bank}}</dd>
					{{/bank}}
					{{#instalmentsNumber}}
					<dt>Cuotas</dt>
					<dd>{{instalmentsNumber}}</dd>
					{{/instalmentsNumber}}
					{{#interest}}
					<dt>Intereses</dt>
					<dd>{{interest}}</dd>
					{{/interest}}
					{{#disccount}}
					<dt>Descuento</dt>
					<dd>{{disccount}}</dd>
					{{/disccount}}
				</dl>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Marca</th>
					<th>Modelo</th>
					<th>Cantidad</th>
					<th>Precio</th>
				</tr>
			</thead>
			<tbody>
				{{#shopCart}}
				<tr>
					<td>{{itemPos}}</td>
					<td>{{brand}}</td>
					<td>{{model}}</td>
					<td>{{quantity}}</td>
					<td>${{marketPrice}}</td>
				</tr>
				{{/shopCart}}
			</tbody>
			<tfoot>
				<tr>
					<th colspan="4">Total de la venta</th>
					<th colspan="2">${{amount}}</th>
				</tr>
			</tfoot>
		</table>
	</div>
</div>